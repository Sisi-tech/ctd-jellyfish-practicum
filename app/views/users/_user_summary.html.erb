<div>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-left">
            <h4>
                <span class="dollar-logo">
                    <%= image_tag "logo00.png", alt: "Logo" %>
                </span>
                CostShare
            </h4>
        </div>
        <div class="navbar-center">
            <button class="nav-btn">Add Expense</button>
            <button class="nav-btn">Settle Up</button>
        </div>
        <div class="navbar-right">
            <div class="profile-info">
                <div class="navbar-profile-pic">
                    <% if user.profile_picture.attached? %>
                        <%= image_tag url_for(user.profile_picture), style: "border-radius: 50%; width: 40px; height: 40px; object-fit: cover;" %>
                    <% else %>
                        <i class="bi bi-person-circle" style="font-size: 100px; color: gray;"></i>
                        <% end %>
                </div>
                <p><%= user.first_name %> <%= user.last_name %></p>
            </div>
            <%= link_to "Logout", logout_path, data: { turbo_method: :delete }, class: "nav-btn" %>
        </div>
    </nav>

    <!-- Main layout -->
    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul>
                <li>üè† Home</li>
                <li>üí∞ Expense</li>
                <li>üë• Groups</li>
                <li>üìú Activity</li>
                <li>üìä Balances</li>
                <li>‚öô Settings</li>
            </ul>
            <div>
                <%= link_to logout_path, data: { turbo_method: :delete }, class: "logout-btn" do %>
                    <i class="fas fa-sign-out-alt" style="margin-right: 6px;"></i>Logout
                <% end %>
            </div>
        </div>

        <!-- Profile section -->
        <div class="profile-container">
            <h3 style="text-align: center;">My Profile</h3>
            <p style="text-align: center;">Manage your personal information and account settings</p>

            <div class="profile-card">
                <div class="card-header">
                    <h3>Personal Information</h3>
                    <%= link_to "Edit Profile", edit_user_path(user), class: "edit-btn", title: "Edit Profile" %>
                </div>

                <div class="profile-body">
                    <div class="profile-left">
                        <% if user.profile_picture.attached? %>
                            <%= image_tag url_for(user.profile_picture), style: "border-radius: 50%; width: 100px; height: 100px; object-fit: cover;" %>
                        <% else %>
                            <i class="bi bi-person-circle" style="font-size: 100px; color: gray;"></i>
                        <% end %>
                        <%= link_to edit_user_path(user), style: "text-decoration: none; margin: 0 4px;", title: "Edit" do %>
                            <i class="bi bi-pencil"></i> 
                        <% end %>
                        <p><%= user.first_name %> <%= user.last_name %></p>
                    </div>

                    <div class="profile-content">
                        <div><strong>First Name: </strong> <%= user.first_name %></div>
                        <div><strong>Last Name: </strong> <%= user.last_name %></div>
                        <div><strong>Email Address: </strong> <%= user.email %></div>
                        <div><strong>Phone Number: </strong> <%= user.phone_number %></div>
                    </div>
                </div>
            </div>

            <div class="profile-card security-card">
                <div class="card-header">
                    <h3>Security</h3>
                </div> 
                <p class="security-description">
                    Keep your account secure by updating your password regularly. Make sure your new password is strong and unique.
                </p>
                <div class="card-header">
                    <div></div>
                    <%= link_to "Change Password", edit_user_path(user), class: "edit-btn", title: "Change Password" %>
                </div>
            </div>
        </div>

        <!-- Right section -->
        <div class="summary-section">
            <div class="summary-card">
                <h3>Account Summary</h3>
                <div>
                    <label>Member Since</label>
                    <p>March 15, 2022</p>
                </div>
                <div>
                    <label>Next Billing Date</label>
                    <p>June 15, 2023</p>
                </div>
            </div>
            <div class="summary-card">
                <h3>Overall Balance</h3>
                <div><label>You are owed</label><p>$245.40</p></div>
                <div><label>You own</label><p>$78.25</p></div>
            </div>
            <div class="summary-card">
                <div>
                    <h3>Net Balance</h3>
                    <p>+$167.25</p>
                </div>
                <button class="view-details-btn">View Details</button>
            </div>
            
        </div>
    </div>
</div>

