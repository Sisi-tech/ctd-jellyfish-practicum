<div>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-left">
            <h4>
                <span class="dollar-logo">
                    <%= image_tag "logo00.png", alt: "Logo" %>
                </span>
                CostShare
            </h4>
        </div>
        <div class="navbar-center">
            <button class="nav-btn">Add Expense</button>
            <button class="nav-btn">Settle Up</button>
        </div>
        <div class="navbar-right">
            <div class="profile-info">
                <div class="navbar-profile-pic">
                    <% if user.profile_picture.attached? %>
                        <%= image_tag url_for(user.profile_picture), style: "border-radius: 50%; width: 40px; height: 40px; object-fit: cover;" %>
                    <% else %>
                        <i class="bi bi-person-circle" style="font-size: 100px; color: gray;"></i>
                        <% end %>
                </div>
                <p><%= user.first_name %> <%= user.last_name %></p>
            </div>
            <button class="nav-btn">Logout</button>
        </div>
    </nav>

    <!-- Main layout -->
    <div class="main-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul>
                <li>üè† Home</li>
                <li>üí∞ Expense</li>
                <li>üë• Groups</li>
                <li>üìú Activity</li>
                <li>üìä Balances</li>
                <li>‚öô Settings</li>
            </ul>
        </div>

        <!-- Profile section -->
        <div class="profile-container">
            <h3>My Profile</h3>
            <p>Manage your personal information and account settings</p>

            <div class="profile-card">
                <div class="card-header">
                    <h3>Personal Information</h3>
                    <button class="edit-btn">Edit Profile</button>
                </div>

                <div class="profile-body">
                    <div class="profile-left">
                        <% if user.profile_picture.attached? %>
                            <%= image_tag url_for(user.profile_picture), style: "border-radius: 50%; width: 100px; height: 100px; object-fit: cover;" %>
                        <% else %>
                            <i class="bi bi-person-circle" style="font-size: 100px; color: gray;"></i>
                        <% end %>
                        <%= link_to edit_user_path(user), style: "text-decoration: none; margin: 0 4px;", title: "Edit" do %>
                            <i class="bi bi-pencil"></i> 
                        <% end %>
                        <p><%= user.first_name %> <%= user.last_name %></p>
                        <button class="change-photo-btn">Change Photo</button>
                    </div>

                    <div class="profile-content">
                        <div><strong>First Name</strong> <%= user.first_name %></div>
                        <div><strong>Last Name</strong> <%= user.last_name %></div>
                        <div><strong>Email Address</strong> <%= user.email %></div>
                        <div><strong>Phone Number</strong> <%= user.phone_number %></div>
                        <div><strong>Currency</strong> <option>USLI($)</option></div>
                        <div><strong>Language</strong> <option>English(US)</option></div>
                    </div>
                </div>
            </div>

            <div class="profile-card">
                <div class="card-header">
                    <h3>Security</h3>
                    <button class="edit-btn">Change Password</button>
                </div>
                <div class="change-password">
                    <div class="row">
                        <label>Current Password</label>
                        <input>
                    </div>
                    <div class="row">
                        <label>New Password</label>
                        <input>
                    </div>
                    <div class="row">
                        <label>Confirm New Password</label>
                        <input>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right section -->
        <div class="summary-section">
            <div class="summary-card">
                <h3>Account Summary</h3>
                <div>
                    <label>Member Since</label>
                    <p>March 15, 2022</p>
                </div>
                <div>
                    <label>Next Billing Date</label>
                    <p>June 15, 2023</p>
                </div>
            </div>
            <div class="summary-card">
                <h3>Overall Balance</h3>
                <div><label>You are owed</label><p>$245.40</p></div>
                <div><label>You own</label><p>$78.25</p></div>
            </div>
            <div class="summary-card">
                <div>
                    <h3>Net Balance</h3>
                    <p>+$167.25</p>
                </div>
                <button class="view-details-btn">View Details</button>
            </div>
            
        </div>
    </div>
</div>

<style>

body, html {
    margin: 0;
    padding: 0;
    height: 100%;
    font-family: Arial, sans-serif;
    background-color: #f3f3f3;
}

/* Menu Card (Sidebar Items) */
.menu-card {
    background: white;
    border-radius: 6px;
    padding: 12px 16px; /* Added right padding */
    margin-bottom: 12px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}


/* Navbar */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #1d917a;
    padding: 10px 20px;
    color: white;
    position: fixed; 
    top: 0;
    left: 0;
    width: 100%;
    box-sizing: border-box;
    z-index: 1000;
}
.navbar h4 {
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
}
.navbar .dollar-logo img {
    width: 30px;
    height: 30px;
    margin-right: 8px;
}
.nav-btn {
    background: white;
    color: #1d917a;
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
    cursor: pointer;
    margin-left: 8px;
}
.nav-btn:hover {
    background-color: #0ca694;
    color: white;
}

.navbar-right,
.profile-info {
    display: flex;
    align-items: center;
    justify-content: center;
}

.profile-info {
    gap: 8px;
}
.navbar-right {
    gap: 12px;
}

/* Main Layout */
.main-container {
    display: flex;
    gap: 20px;
    padding: 20px;
    padding-top: 80px;
    box-sizing: border-box;
}

/* Sidebar */
.sidebar {
    background: white;
    padding: 15px 20px;
    flex-shrink: 0;
    width: 220px;
    border-radius: 8px;
    box-sizing: border-box;
}
.sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
}
.sidebar li {
    padding: 10px 0;
    font-size: 14px;
    color: black;
    cursor: pointer;
}
.sidebar li:hover {
    color: #1d917a;
}

/* Profile Container */
.profile-container {
    flex: 2;
}
.profile-container h3 {
    margin-top: 0;
}
.profile-card {
    background: white;
    padding: 15px;
    margin-top: 15px;
    border-radius: 8px;
}
.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.edit-btn {
    background-color: #1d917a;
    color: white;
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
    cursor: pointer;
}
.edit-btn:hover {
    background-color: #0ca694;
}

/* Profile Body */
.profile-body {
    display: flex;
    gap: 20px;
    margin-top: 10px;
}
.profile-left {
    text-align: center;
}
.change-photo-btn {
    background: #1d917a;
    color: white;
    border: none;
    padding: 5px 10px;
    margin-top: 10px;
    border-radius: 4px;
    cursor: pointer;
}
.change-photo-btn:hover {
    background-color: #0ca694;
}
.profile-content div {
    margin-bottom: 8px;
}

/* Change password */
.change-password {
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.change-password .row {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 4px 10px;
}

.change-password input {
    padding: 8px 10px;
}

/* Summary Section */
.summary-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 15px;
}
.summary-card {
    background: white;
    padding: 15px 20px;
    border-radius: 8px;
    box-sizing: border-box;
}
.view-details-btn {
    background-color: #1d917a;
    color: white;
    border: none;
    padding: 8px 12px;
    border-radius: 4px;
    cursor: pointer;
}
.view-details-btn:hover {
    background-color: #0ca694;
}

/* Mobile layout - when screen width is 768px or less */
@media (max-width: 768px) {
    /* Make main layout stack vertically */
    .main-container {
        flex-direction: column;
    }

    /* Sidebar becomes full width */
    .sidebar {
        width: 100%;
    }

    /* Profile container full width */
    .profile-container {
        width: 100%;
    }
    .profile-container h3 {
        text-align: center;
    }

    /* Summary section full width */
    .summary-section {
        width: 100%;
    }

    /* Profile body stacks vertically */
    .profile-body {
        flex-direction: column;
        align-items: center;
    }

    /* Navbar adjusts for smaller screen */
    .navbar {
        padding: 10px;
    }

    .navbar-center {
        margin-top: 10px;
    }

    .navbar-right {
        margin-top: 10px;
    }
}

/* For small screens */
@media (max-width: 600px) {
    .navbar {
        padding: 6px 10px;
    }

    .navbar h4 {
        font-size: 14px;
    }

    .navbar .dollar-logo img {
        width: 22px;
        height: 22px;
        margin-right: 5px;
    }

    .nav-btn {
        padding: 4px 8px;
        font-size: 12px;
        margin-left: 4px;
    }

    .navbar-right {
        gap: 6px;
    }

    .profile-info {
        gap: 4px;
    }
}


</style>
