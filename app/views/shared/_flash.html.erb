<% if flash[:notice] || flash[:alert] %>
  <div class="<%= flash[:alert] ? 'alert' : 'notice' %>" style="position:relative; z-index:9999; padding:12px 16px; border-radius:6px; margin:10px 0; font-weight:500; <%= flash[:alert] ? 'background-color:#ffe6e6; border:1px solid #e2b5b5; color:#641e1e;' : 'background-color:#e6ffe6; border:1px solid #b5e2b5; color:#1e6420;' %>">
    <%= flash[:alert] || flash[:notice] %>
  </div>
<% end %>
