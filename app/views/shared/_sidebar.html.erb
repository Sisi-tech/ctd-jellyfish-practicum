<!-- Sidebar -->
<div class="sidebar">
    <ul>
        <li><%= link_to "🏠 Home", dashboard_path %></li>
        <li><%= link_to "💰 Expense", expenses_path %></li>
        <li><%= link_to "🤝 Friends", user_friendships_path(current_user) %></li>
        <li><%= link_to "👥 Groups", user_groups_path %></li>
        <li>📜 Activity</li>
        <li><%= link_to "📊 Balances", user_balances_path(current_user) %></li>
        <% if current_user %>
            <li><%= link_to "⚙ Settings", user_path(current_user) %></li>
        <% end %>
    </ul>
    <div>
        <%= link_to logout_path, data: { turbo_method: :delete }, class: "logout-btn" do %>
            <i class="fas fa-sign-out-alt" style="margin-right: 6px;"></i>Logout
        <% end %>
    </div>
</div>     

<style>
/* Sidebar */
.sidebar {
    background: white;
    padding: 15px 20px;
    flex-shrink: 0;
    width: 220px;
    border-radius: 8px;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
}
.sidebar li {
    padding: 10px 0;
    font-size: 14px;
    color: black;
    cursor: pointer;
}
.sidebar li:hover {
    color: #1d917a;
}

.sidebar li a {
    text-decoration: none;
    color: inherit; 
    display: inline-block;
    width: 100%;
}


/* Responsive Layout */
@media (max-width: 768px) {
    .sidebar {
        width: 100%;
    }
}
</style>