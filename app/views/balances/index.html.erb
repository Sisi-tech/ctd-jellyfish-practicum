<div>
  <%= render "shared/navbar" %>
  <div class="main-container">
    <%= render "shared/sidebar" %>
    <div class="balance-container">
      <h2>ðŸ“Š Balance</h2>
      <% if @balances.any? %>
        <ul class="balance-list">
          <% @balances.each do |other_user, amount| %>
            <% next if other_user == current_user %>
            <% initials = other_user.full_name.split.map { |n| n[0].upcase }.join %>
            <% if amount > 0 %>
              <li class="balance-item positive">
                <div class="user-info">
                  <div class="avatar"><%= initials %></div>
                  <div class="text-info">
                    <span><strong><%= other_user.full_name %></strong> owes you</span>
                    <div class="email"><%= other_user.email %></div>
                  </div>
                </div>
                <span class="amount">+$<%= '%.2f' % amount %></span>
              </li>
            <% elsif amount < 0 %>
              <li class="balance-item negative">
                <div class="user-info">
                  <div class="avatar"><%= initials %></div>
                  <div class="text-info">
                    <span>You owe <strong><%= other_user.full_name %></strong></span>
                    <div class="email"><%= other_user.email %></div>
                  </div>
                </div>
                <span class="amount">-$<%= '%.2f' % amount.abs %></span>
              </li>
            <% else %>
              <li class="balance-item neutral">
                <div class="user-info">
                  <div class="avatar"><%= initials %></div>
                  <div class="text-info">
                    <span>You are settled up with <strong><%= other_user.full_name %></strong></span>
                    <div class="email"><%= other_user.email %></div>
                  </div>
                </div>
              </li>
            <% end %>
          <% end %>
        </ul>
      <% else %>
        <p>No balances to show.</p>
      <% end %>
    </div>
  </div>
</div>

<style>
  body, html {
    margin: 0;
    padding: 0;
    height: 100%;
    font-family: Arial, sans-serif;
    background-color: #f9f9f9;
    color: #333;
  }

  .main-container {
    display: flex;
    gap: 20px;
    padding: 20px;
    padding-top: 100px;
    box-sizing: border-box;
    background-color: #f5f5f5;
    min-height: 100vh;
    width: 100%;
  }

  .balance-container {
    flex: 1;
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.08);
  }

  .balance-container h2 {
    margin-top: 0;
    margin-bottom: 15px;
    font-size: 22px;
    color: #1d917a;
  }

  .balance-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .balance-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    margin-bottom: 10px;
    border-radius: 6px;
    font-size: 15px;
  }

  .balance-item.positive {
    background-color: #e8f8f4;
    border-left: 4px solid #1d917a;
  }

  .balance-item.negative {
    background-color: #fbeaea;
    border-left: 4px solid #e74c3c;
  }

  .balance-item.neutral {
    background-color: #f2f2f2;
    border-left: 4px solid #bbb;
  }

   .user-info {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .avatar {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    background: #ddd;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    color: #444;
    font-size: 13px;
    letter-spacing: 1px;
  }

  .email {
    font-size: 12px;
    color: #777;
    margin-top: 2px;
  }

   .text-info {
    display: flex;
    flex-direction: column;
  }

  .text-info span {
    font-size: 15px;
  }

  .amount {
    font-weight: bold;
    font-size: 15px;
    min-width: 70px;
    text-align: right;
  }

  .positive .amount {
    color: #1d917a;
  }

  .negative .amount {
    color: #e74c3c;
  }

  .btn {
    background-color: #1d917a;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    cursor: pointer;
    font-size: 14px;
    transition: background 0.2s ease;
  }

  .btn:hover {
    background-color: #15806b;
  }

 .logout-btn {
      background: white;
      color: #1d917a;
      border: none;
      padding: 6px 12px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
  }

  .logout-btn:hover {
      background-color: #0ca694;
      color: white;
  }

  @media (max-width: 768px) {
    .main-container {
      flex-direction: column;
      padding-top: 80px;
    }

    .balance-container {
      padding: 15px;
    }
  }
</style>
