<div>
  <!-- Navbar -->
  <%= render "shared/navbar" %>

  <!-- Main layout -->
  <div class="main-container">
    <!-- Sidebar -->
    <%= render "shared/sidebar" %>

    <!-- Main Content -->
    <div class="main-content">
      <h1>Add New Expense</h1>

      <div class="form-card">
        <%= render "form", expense: @expense %>
      </div>

      <div class="button-group">
        <%= link_to "Back", (request.referer || expenses_path), class: "btn-back" %>
        <%= link_to "View All Expenses", expenses_path, class: "btn-view-all" %>
      </div>
    </div>
  </div>

  <style>
  /* Base Reset */
  body, html {
      margin: 0;
      padding: 0;
      font-family: 'Segoe UI', Arial, sans-serif;
      background-color: #f3f6f5;
      color: #333;
  }

  /* Main Layout */
  .main-container {
      display: flex;
      gap: 20px;
      padding: 20px;
      padding-top: 100px;
      min-height: calc(100vh - 120px);
      box-sizing: border-box;
  }

  /* Sidebar */
  .sidebar {
      width: 260px;
      background-color: #fff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 4px 18px rgba(0,0,0,0.07);
      flex-shrink: 0;
  }

  /* Main Content */
  .main-content {
      flex-grow: 1;
      background-color: #fff;
      padding: 35px 30px;
      border-radius: 14px;
      box-shadow: 0 6px 24px rgba(0,0,0,0.06);
      display: flex;
      flex-direction: column;
      gap: 20px;
  }

  .main-content h1 {
      margin: 0;
      margin-bottom: 25px;
      color: #1d917a;
      font-size: 30px;
      text-align: center;
      letter-spacing: 0.5px;
  }

  /* Form Card */
  .form-card {
      background-color: #f9fdfb;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 6px 16px rgba(0,0,0,0.05);
      transition: transform 0.2s, box-shadow 0.2s;
  }

  .form-card:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(0,0,0,0.08);
  }

  /* Form Fields */
  form {
      display: flex;
      flex-direction: column;
      gap: 20px;
  }

  form input, form select, form textarea {
      padding: 12px 16px;
      font-size: 15px;
      border: 1px solid #cde8e1;
      border-radius: 8px;
      background-color: #fff;
      width: 100%;
      box-sizing: border-box;
      transition: border-color 0.3s, box-shadow 0.3s;
  }

  form input:focus, form select:focus, form textarea:focus {
      outline: none;
      border-color: #1d917a;
      box-shadow: 0 0 8px rgba(29, 145, 122, 0.25);
  }

  form input[type="submit"] {
      background-color: #1d917a;
      color: white;
      border: none;
      cursor: pointer;
      padding: 14px 24px;
      font-size: 16px;
      border-radius: 8px;
      width: fit-content;
      align-self: flex-start;
      transition: background-color 0.3s, transform 0.2s;
  }

  form input[type="submit"]:hover {
      background-color: #145d4d;
      transform: translateY(-2px);
  }

  /* Buttons Below Form */
  .button-group {
      display: flex;
      gap: 18px;
      justify-content: center;
      flex-wrap: wrap;
      margin-top: 10px;
  }

  .btn-back {
      display: inline-block;
      padding: 12px 20px;
      background-color: #e4e9e8;
      color: #555;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 500;
      transition: all 0.2s;
  }

  .btn-back:hover {
      background-color: #d9dedc;
      color: #333;
      transform: translateY(-2px);
  }

  .btn-view-all {
      display: inline-block;
      padding: 12px 20px;
      background-color: #1d917a;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 500;
      transition: background-color 0.3s, transform 0.2s;
  }

  .btn-view-all:hover {
      background-color: #145d4d;
      transform: translateY(-2px);
  }

  /* Logout button */
    .logout-btn {
      background: white;
      color: #1d917a;
      border: none;
      padding: 6px 12px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
    }

    .logout-btn:hover {
      background-color: #0ca694;
      color: white;
    }

  /* Responsive */
  @media (max-width: 768px) {
      .main-container {
          flex-direction: column;
          padding: 15px;
      }

      .sidebar {
          width: 100%;
          margin-bottom: 20px;
      }

      .main-content {
          width: 100%;
      }

      form input[type="submit"], .btn-back, .btn-view-all {
          width: 100%;
          text-align: center;
      }
  }
  </style>
</div>
