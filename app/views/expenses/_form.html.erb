<%= form_with(model: expense, local: true) do |form| %>
  <% if expense.errors.any? %>
    <div style="color: red; margin-bottom: 12px;">
      <h2><%= pluralize(expense.errors.count, "error") %> prohibited this expense from being saved:</h2>
      <ul>
        <% expense.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <div style="margin-bottom: 10px;">
    <%= form.label :title, style: "display: block; font-weight: bold;" %>
    <%= form.text_field :title, style: "width: 100%; padding: 6px; border-radius: 4px; border: 1px solid #ccc;" %>
  </div>

  <!-- Amount -->
  <div style="margin-bottom: 10px;">
    <%= form.label :amount, style: "display: block; font-weight: bold;" %>
    <%= form.number_field :amount, step: "0.01", style: "width: 100%; padding: 6px; border-radius: 4px; border: 1px solid #ccc;" %>
  </div>

  <!-- Category -->
  <div style="margin-bottom: 10px;">
    <%= form.label :category_id, "Category", style: "display: block; font-weight: bold;" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Select a category", style: "width: 100%; padding: 6px; border-radius: 4px; border: 1px solid #ccc;" %>
  </div>

  <!-- Submit button -->
  <div style="margin-top: 12px;">
    <%= form.submit "Save Expense", style: "background-color: #1d917a; color: white; border: none; padding: 8px 14px; border-radius: 4px; cursor: pointer;" %>
  </div>
<% end %>
