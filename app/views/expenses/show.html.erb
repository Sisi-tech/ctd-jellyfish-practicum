<div>
  <!-- Navbar -->
  <%= render "shared/navbar" %>

  <!-- Main layout -->
  <div class="main-container">
    <!-- Sidebar -->
    <%= render "shared/sidebar" %>

    <!-- Main Content -->
    <div class="main-content">
      <h1>Expense Details</h1>

      <div class="form-card">
        <p><strong>Title:</strong> <%= @expense.title %></p>
        <p><strong>Amount:</strong> <%= number_to_currency(@expense.amount) %></p>

        <% if @expense.respond_to?(:split_type) && @expense.split_type.present? %>
          <p><strong>Split Type:</strong> <%= @expense.split_type %></p>
        <% end %>

        <% if @expense.category.present? %>
          <p><strong>Category:</strong> <%= @expense.category.name %></p>
        <% else %>
          <p><strong>Category:</strong> Not assigned</p>
        <% end %>
      </div>

      <div class="button-group">
        <%= link_to "Back", (request.referer || expenses_path), class: "btn-back" %>
        <%= link_to "View All Expenses", expenses_path, class: "btn-view-all" %>
        <%= link_to "Edit Expense", edit_expense_path(@expense), class: "btn-view-all" %>
      </div>
    </div>
  </div>

  <style>
    /* Reset and Base Styles */
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: 'Segoe UI', Arial, sans-serif;
      background-color: #f3f3f3;
    }

    /* Main Layout */
    .main-container {
      display: flex;
      gap: 20px;
      padding: 20px;
      padding-top: 100px; 
      box-sizing: border-box;
      align-items: stretch;
      min-height: calc(100vh - 120px);
    }

    /* Sidebar */
    .sidebar {
      width: 250px;
      background-color: #fff;
      padding: 15px;
      border-radius: 10px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
      flex-shrink: 0;
    }

    /* Main Content */
    .main-content {
      flex-grow: 1;
      background-color: #fff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 4px 14px rgba(0,0,0,0.08);
    }

    .main-content h1 {
      margin-top: 0;
      margin-bottom: 30px;
      color: #1d917a;
      text-align: center;
      font-size: 28px;
    }

    /* Form card */
    .form-card {
      background-color: #f9fdfb;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.05);
      margin-bottom: 25px;
    }

    /* Buttons below form */
    .button-group {
      display: flex;
      gap: 15px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .btn-back {
      display: inline-block;
      padding: 10px 18px;
      background-color: #e0e0e0;
      color: #555;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 500;
      transition: background-color 0.2s, color 0.2s;
    }

    .btn-back:hover {
      background-color: #d5d5d5;
      color: #333;
    }

    .btn-view-all {
      display: inline-block;
      padding: 10px 18px;
      background-color: #1d917a;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 500;
      transition: background-color 0.2s;
    }

    .btn-view-all:hover {
      background-color: #145d4d;
    }

    /* Logout button */
    .logout-btn {
      background: white;
      color: #1d917a;
      border: none;
      padding: 6px 12px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 14px;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
    }

    .logout-btn:hover {
      background-color: #0ca694;
      color: white;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .main-container {
        flex-direction: column;
        padding: 15px;
      }

      .sidebar {
        width: 100%;
        margin-bottom: 15px;
      }

      .main-content {
        width: 100%;
      }

      .button-group {
        gap: 10px;
      }
    }
  </style>
</div>
