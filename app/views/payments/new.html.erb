<div>
  <%= render "shared/navbar" %>

  <div class="main-container">
    <!-- Single Sidebar -->
    <%= render "shared/sidebar" %>

    <div class="form-container">
      <%= render "shared/flash" %>
        <h2 class="title">New Payment</h2>
      <div class="form-container>
        <%= render "payments/form" %>
      </div>
    </div>
  </div>
</div>

<style>
  /* Reset and Base Styles */
  body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: Arial, sans-serif;
      background-color: #f3f3f3;
  }

  /* Main container and layout */
  .main-container {
      display: flex;
      gap: 20px;
      padding: 20px;
      padding-top: 100px;
      box-sizing: border-box;
      background-color: #f0f0f0;
      min-height: 100vh;
  }

  .sidebar ul li {
      border-bottom: none;
      padding: 10px 0;
  }

  .form-container {
    flex: 1;
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

  .title {
    text-align: center;
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #1d917a; 
    }

  /* Responsive layout */
  @media (max-width: 768px) {
      .sidebar {
          position: static;
          height: auto;
          width: 100%;
          overflow-y: visible;
      }
      .main-container {
          flex-direction: column;
          padding-top: 80px;
      }
  }
</style>
