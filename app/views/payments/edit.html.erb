<div>
    <%= render "shared/navbar" %>
    <div class="main-container" >
        <%= render "shared/sidebar" %>
        <div class="form-container">
            <%= render "shared/flash" %>
             <h2 class="title">Edit Payment</h2>
            <div class="form-expense">       
                <%= render "payments/form"%>
            </div>
        </div>
    </div>
</div>

<style>
  /* Reset and Base Styles */
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        font-family: Arial, sans-serif;
        background-color: #f3f3f3;
    }
    /* Main container and layout */
    .main-container {
      display: flex;
      gap: 20px;
      padding: 20px;
      padding-top: 100px;
      box-sizing: border-box;
      background-color: #f0f0f0;
      min-height: 100vh;
  }

 .form-container {
  flex: 1;
  background: #fff;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.08);
}

.title {
    text-align: center;
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #1d917a; 
    }
    
  .sidebar ul li {
    border-bottom: none;
    padding: 10px 0;
  }
    .edit-expense {
      display: flex;
      flex-direction: column;
      min-height: calc(100vh - 100px);
      margin: 0 auto;
      width: 100%;
    }

    /* Responsive layout */
    @media (max-width: 768px) {
      .sidebar {
          position: static;
          height: auto;
          width: 100%;
          overflow-y: visible;
      }
      .main-container {
        flex-direction: column;
        padding-top: 80px;
      }
    }
</style>


